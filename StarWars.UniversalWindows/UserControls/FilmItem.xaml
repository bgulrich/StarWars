<UserControl
    x:Class="StarWars.UniversalWindows.UserControls.FilmItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StarWars.UniversalWindows.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="using:StarWars.UniversalWindows.UserControls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Margin="5" Padding="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="ShadowHost"/>
        <Rectangle x:Name="Rectangle" Grid.ColumnSpan="4" Fill="White" RadiusX="5" RadiusY="5" Stroke="Black" StrokeThickness="0.5" Margin="-10"/>
        <uc:Photo Margin="10" UseRandomBackgroundColor="True" PlaceholderType="Film"/>
        <TextBlock FontSize="16" Margin="10" Grid.Column="1" Text="{x:Bind Film.Title}"/>
        <TextBlock Margin="10" Grid.Column="2" Text="{x:Bind Film.Director}"/>
        <TextBlock Grid.Column="3">
            <Run Text="Characters ("/><Run Text="{x:Bind Film.CharacterCount}"/><Run Text=")"/>
        </TextBlock>
    </Grid>
</UserControl>
